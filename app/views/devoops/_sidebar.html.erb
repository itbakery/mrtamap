<div id="sidebar-left" class="col-xs-2 col-sm-2">
	<ul class="nav main-menu">
		<li class="dropdown">
			<% @lines.each do |line| %>
			<a href="#" class="dropdown-toggle">
				<%= image_tag line.icon.icon rescue nil %><%= line.code %>
			</a>
			<ul class="dropdown-menu">
				<li class="dropdown" >
				<% line.phases.each do |phase| %>
			      <a href="maps/index" class="dropdown-toggle">
				    <i class="fa fa-bar-chart-o"></i>
				    <span class="hidden-xs"><%= phase.code %></span>
			      </a>
			      <ul class="dropdown-menu">
                      <% phase.stations.each do |station| %>
                        <li><a href="#"><%=station.code%></a></li>
                      <%end%>
			      </ul>
			    <%end%>
			    </li>
			</ul>
			<%end%>
		</li>

	</ul>
</div>