<%= form_for(@phase_detail, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @phase_detail.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@phase_detail.errors.count, "error") %> prohibited this phase_detail from being saved:</h4>

      <ul>
      <% @phase_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :phase, "รหัสช่วง", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select  :phase_id, Phase.all , :id, :code , {:prompt => "Select Phase"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :country, "ประเทศ/ภาษา", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select  :country_id, Country.all , :id, :name , {:prompt => "Select Country/Language"} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :no, "ระยะ", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.number_field :no, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title,"ชื่อช่วง", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :distance, "ระยะทางช่วง", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :distance, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :status, "สถานะ",:class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :status, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, "รายละเอียด",:class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
