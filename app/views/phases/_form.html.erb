<%= form_for(@phase, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @phase.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@phase.errors.count, "error") %> prohibited this phase from being saved:</h4>

      <ul>
      <% @phase.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :line, "รหัสโครงการ", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select  :line_id, Line.all , :id, :code , {:prompt => "Select MRTA Line"} %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :code, "รหัสช่วง", :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :code, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
