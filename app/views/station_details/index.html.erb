
<div class='row' id='content-wrapper'>
  <div class='col-xs-12'>
    <div class="page-header">
      <%= link_to new_station_detail_path, :class => 'btn btn-primary' do %>
        <span class="glyphicon glyphicon-plus"></span>
        New Station detail
      <% end %>
      <h1>Listing station_details</h1>
    </div>

    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover data-table">
        <thead>
          <tr>
            <th>Code</th>
            <th>Title</th>
            <th> <%=icon(:"map-marker")%>Latitude</th>
            <th> <%=icon(:"map-marker")%>Longitude</th>
            <th>Description</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <%= content_tag_for(:tr, @station_details) do |station_detail| %>
            <td><%= station_detail.code %></td>
            <td><%= station_detail.title %></td>
            <td> <%= station_detail.latitude %></td>
            <td> <%= station_detail.longitude %></td>
            <td><%= station_detail.description %></td>
            <td><%= link_to icon(:"folder-open"), station_detail %></td>
            <td><%= link_to icon(:"pencil"), edit_station_detail_path(station_detail) %></td>
            <td><%= link_to icon(:"trash"), station_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
