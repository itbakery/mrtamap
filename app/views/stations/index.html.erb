

<div class='row' id='content-wrapper'>
  <div class='col-xs-12'>
<div class="page-header">
  <%= link_to new_station_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Station
  <% end %>
  <h1>Listing stations</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover data-table">
    <thead>
      <tr>
            <th>Phase</th>
            <th>Code</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @stations) do |station| %>
            <td><%= station.phase.code %></td>
            <td><%= station.code %></td>
            <td><%= link_to icon(:"folder-open"), station %></td>
        <td><%= link_to icon(:"pencil"), edit_station_path(station) %></td>
        <td><%= link_to icon(:"trash"), station, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
</div>
</div>
